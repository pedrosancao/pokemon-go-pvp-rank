{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
  },
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "src/__tests__",
  ]
}
